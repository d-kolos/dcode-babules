<p style="color: green"><%= notice %></p>

<%= render @operation %>

<div>
  <%= #noinspection RubyResolve
      link_to "Edit this operation", edit_operation_path(@operation), class: 'btn btn-sm btn-primary' %>
  <%= #noinspection RubyResolve
      link_to "Back to operations", operations_path, class: 'btn btn-sm btn-secondary' %>

  <br><br>
  <%= button_to "Destroy this operation", @operation, method: :delete, class: 'btn btn-sm btn-outline-warning' %>
</div>
