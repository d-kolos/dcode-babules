<%= #noinspection RubyResolve
    form_with(model: operation) do |form| %>
  <% #noinspection RubyResolve
     if operation.errors.any? %>
    <div style="color: red" class="row mb-3">
      <div style="color: red">
        <h2><%= pluralize(operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

        <ul>
          <% #noinspection RubyResolve
             operation.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row mb-3">
    <%= form.label :odate, 'Operation date', class: "col-sm-12 col-form-label" %>
    <div class="col-sm-2">
      <%= form.date_field :odate, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :amount, class: "col-sm-12 col-form-label" %>
    <div class="col-sm-2">
      <%= form.text_field :amount, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :description, class: "col-sm-12 col-form-label" %>
    <div class="col-sm-5">
      <%= form.text_field :description, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :category_id, class: "col-sm-12 col-form-label" %>
    <div class="col-sm-3">
      <%= select(:operation, :category_id, options_for_select(@categories), {}, {class: 'form-select'} ) %>
    </div>
  </div>

  <div>
    <%= form.submit class: 'btn btn-sm btn-success' %>
  </div>
<% end %>
