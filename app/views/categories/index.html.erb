<p style="color: green"><%= notice %></p>

<div id="categories">

  <% if @categories.present? %>
    <table class="table table-hover table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>

  <% @categories.each do |category| %>
    <%= render category %>
  <% end %>

  </tbody>
  </table>
  <% end %>

</div>

<%= #noinspection RubyResolve
    link_to "New category", new_category_path, class: 'btn btn-sm btn-primary' %>
