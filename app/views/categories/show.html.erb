<p style="color: green"><%= notice %></p>

<%= render @category %>

<div>
  <%= #noinspection RubyResolve
      link_to "Edit this category", edit_category_path(@category), class: 'btn btn-sm btn-primary' %>
  <%= #noinspection RubyResolve
      link_to "Back to categories", categories_path, class: 'btn btn-sm btn-secondary' %>

  <br><br>
  <%= button_to "Destroy this category", @category, method: :delete, class: 'btn btn-sm btn-outline-warning' %>
</div>
